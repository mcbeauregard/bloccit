<!-- #1 check if comment is present -->
<% if(comment) { %>
  <div style="width: 50%">
    <hr>
    <p>
      <%= comment.body %>
    </p>
    <small class="card-subtitle mb-2 text-muted">
 <!-- #2 load user associated with comment -->
      sent by 
      <%= comment.User.email %> on 
      <%= comment.createdAt %>
    </small>

 <!-- #3 disply delete button if signed-in users owns it or is an admin -->
    <% if(currentUser && currentUser.id === comment.userId || currentUser.isAdmin()) { %>
      <form style="display:initial" action="/topics/<%= post.topicId %>/posts/<%= post.id %>/comments/<%= comment.id %>/destroy"
            method="post">
        <button type="submit" class="btn btn btn-sm btn-outline-danger">Delete</button>
      </form>
    <% } %>
    <hr>
  </div>
<% } %>
